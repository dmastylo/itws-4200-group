extends layout

block content
  div#titleBlock.large-6.large-centered.columns
    div.row
      img#logo(width="100" height="100" src="/images/logo.png")
      h1#title CTF Game
  div.row
    h2#username.large-4.columns.left
  div.row
  #players

  #game
    canvas.large-centered.columns(width="720" height="480")

  form.large-5.large-centered.columns(action="")
    fieldset
      legend#formtitle Register Now!
      input#username-input.large-8.columns(autocomplete="off")
      button.tiny.radius.right Register

  h2#userListTitle.large-5.large-centered.columns Users Playing Now!
  div.row
  ul#current-users.large-4.large-centered.columns

